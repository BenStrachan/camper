<div class="row">
  <div class="col-md-6 col-sm-6 col-6">
    <h1>Vehicles</h1>
  </div>
  <div class="col-md-6 col-sm-6 col-6 text-right">
    <a class="btn btn-outline-primary" href="<%= new_admin_vehicle_path %>">New</a>
  </div>
</div>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Vehicle make</th>
      <th>Vehicle model title</th>
      <th>Vehicle model descritpion</th>
      <th>Start year</th>
      <th>End year</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @vehicles.each do |vehicle| %>
      <tr>
        <td><%= vehicle.vehicle_make %></td>
        <td><%= vehicle.vehicle_model_title %></td>
        <td><%= vehicle.vehicle_model_descritpion %></td>
        <td><%= vehicle.start_year %></td>
        <td><%= vehicle.end_year %></td>
        <td><%= link_to 'Show', admin_vehicle_path(vehicle) %> |
        <%= link_to 'Edit', edit_admin_vehicle_path(vehicle) %> |
        <%= link_to 'Destroy', admin_vehicle_path(vehicle), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
