<h1>Camper</h1>

<%= search_form_for @search do |f| %>
  <div class="row">
    <div class="col-sm-6">
      <div class="form-group">
        <label>Price Min</label>
        <%= f.search_field :display_price_gteq, class: 'form-control' %>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="form-group">
        <label>Price Max</label>
        <%= f.search_field :display_price_lteq, class: 'form-control' %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-4">
      <div class="form-group">
        <label>Capacity</label>
        <%= f.search_field :capacity_lteq, class: 'form-control' %>
      </div>
    </div>
    <div class="col-sm-4">
      <div class="form-group">
        <label>Max Ball Mass</label>
        <%= f.search_field :ball_weight_lteq, class: 'form-control' %>
      </div>
    </div>
    <div class="col-sm-4">
      <div class="form-group">
        <label>Max With Breaks</label>
        <%= f.search_field :tare_lteq, class: 'form-control' %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <div class="form-group">
        <label>Inclusions</label>
        <select name="inclusions[]" class="select2 form-control" multiple="true">
          <%= options_for_select(Camper::INCLUSIONS, params[:inclusions]) %>
        </select>
      </div>
    </div>
  </div>
  <div>
    <button class="btn btn-outline-primary">
      Search
    </button>
  </div>
<% end %>
<hr>
<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th>Brand</th>
        <th>Model</th>
        <th>Version</th>
        <th>Display price</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @campers.each do |camper| %>
      <tr>
        <td><%= camper.brand %></td>
        <td><%= camper.model %></td>
        <td><%= camper.version %></td>
        <td><%= camper.display_price %></td>
        <td>
          <a class="btn btn-outline-success btn-sm"
            href="<%= camper_path(camper) %>">
            Show
          </a>
        </td>
      </tr>
      <% end %>
      <% if @campers.blank? %>
      <tr>
        <td colspan="4">Not found any campers</td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>